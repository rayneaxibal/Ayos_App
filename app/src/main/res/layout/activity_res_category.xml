<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#3C693D"
        android:gravity="center"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Select a category that matches the issue"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#404040"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:queryHint="Search here..."
        android:iconifiedByDefault="false"
        android:layout_margin="16dp"
        android:background="@drawable/search_bg"/>
    
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Infrastructure &amp; Public Utilities"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3C693D"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:chipSpacing="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStreetlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Streetlight"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPublicFacility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public Facility"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDrainage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drainage"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDamagedRoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Damaged Road"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPothole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pothole"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Environment &amp; Sanitation"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3C693D"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:chipSpacing="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipUncollectedGarbage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uncollected Garbage"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipIllegalDumping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Illegal Dumping"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFallenTree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fallen Tree"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCloggedCanals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clogged Canals"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traffic &amp; Transport"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3C693D"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:chipSpacing="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipIllegalParking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Illegal Parking"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRoadObstruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Road Obstruction"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMissingTrafficSigns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Missing Traffic Signs"
                    android:checkable="true"
                    android:textColor="#404040"
                    app:chipBackgroundColor="@color/chip_bg"
                    app:chipStrokeColor="@color/chip_stroke"
                    app:chipStrokeWidth="2dp"/>
            </com.google.android.material.chip.ChipGroup>

            <Button
                android:id="@+id/btnCont"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:text="Continue"
                android:textColor="@android:color/white"
                android:backgroundTint="#3C693D"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>