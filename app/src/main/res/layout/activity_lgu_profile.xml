<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LguProfileActivity">

    <!-- Header Background -->
    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="@drawable/profile_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/profile_title"
        android:textColor="#404040"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view5" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/profile_image_description"
        android:src="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        app:tint="#404040" />

    <TextView
        android:id="@+id/tvName5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#404040"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/imageView19"
        tools:text="Roberto Reyes" />

    <TextView
        android:id="@+id/tvRole5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#404040"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tvName5"
        app:layout_constraintStart_toStartOf="@+id/tvName5"
        app:layout_constraintTop_toBottomOf="@+id/tvName5"
        tools:text="LGU member" />

    <!-- Stats Boxes -->
    <LinearLayout
        android:id="@+id/totalReportsLayout"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/stats_lightbox"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@+id/dailyReportLayout"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view5">

        <TextView
            android:id="@+id/tvTotalReports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1E3D1F"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_reports"
            android:textAlignment="center"
            android:textColor="#404040"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dailyReportLayout"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/stats_greenbox"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/totalReportsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/totalReportsLayout"
        app:layout_constraintTop_toTopOf="@+id/totalReportsLayout">

        <TextView
            android:id="@+id/tvDailyReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1E3D1F"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="1/3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_report"
            android:textColor="#404040"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="#CCCCCC"
        app:layout_constraintBottom_toTopOf="@+id/editProfileRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalReportsLayout" />

    <!-- Menu Items as separate clickable rows -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editProfileRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view4">

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="95dp"
            android:contentDescription="@string/icon_edit_profile"
            android:src="@drawable/ic_edit_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#404040" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="178dp"
            android:layout_height="19dp"
            android:layout_marginStart="22dp"
            android:text="@string/edit_profile"
            android:textColor="#404040"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/imageView24"
            app:layout_constraintStart_toEndOf="@id/imageView24"
            app:layout_constraintTop_toTopOf="@id/imageView24" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="78dp"
            android:contentDescription="@string/icon_forward_arrow"
            android:src="@drawable/ic_forward"
            app:layout_constraintBottom_toBottomOf="@id/textView15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView15"
            app:tint="#404040" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editProfileRow">

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="95dp"
            android:contentDescription="@string/icon_settings"
            android:src="@drawable/ic_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#404040" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="173dp"
            android:layout_height="18dp"
            android:layout_marginStart="22dp"
            android:text="@string/settings"
            android:textColor="#404040"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/imageView26"
            app:layout_constraintStart_toEndOf="@id/imageView26"
            app:layout_constraintTop_toTopOf="@id/imageView26" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="78dp"
            android:contentDescription="@string/icon_forward_arrow"
            android:src="@drawable/ic_forward"
            app:layout_constraintBottom_toBottomOf="@id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView3"
            app:tint="#404040" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logoutRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingsRow">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="95dp"
            android:contentDescription="@string/icon_logout"
            android:src="@drawable/ic_logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#404040" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="181dp"
            android:layout_height="18dp"
            android:layout_marginStart="22dp"
            android:text="@string/log_out"
            android:textColor="#404040"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintTop_toTopOf="@id/imageView" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="78dp"
            android:contentDescription="@string/icon_forward_arrow"
            android:src="@drawable/ic_forward"
            app:layout_constraintBottom_toBottomOf="@id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView4"
            app:tint="#404040" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
